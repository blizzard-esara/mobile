<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/init_background">
    <!--
    <ImageView
        android:id="@+id/helloImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_menu_gallery"/>
    -->
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
    <ImageView
        android:id="@+id/eggSpeachImageView"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/speech_frame"
        android:visibility="invisible"
        android:translationZ="10dp"
        android:layout_alignParentTop="true"
        />

        <TextView
            android:id="@+id/eggSpeachTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:translationZ="11dp"
            android:textColor="#000"
            android:fontFamily="@font/pfstardust"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/eggImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="5dp"
            android:src="@drawable/basic_egg"/>

        <ImageView
            android:id="@+id/starcraftEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="6dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/starcraft_egg"/>

        <ImageView
            android:id="@+id/diabloEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="7dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/diablo_egg"/>

        <ImageView
            android:id="@+id/overWatchEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="8dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/overwatch_egg"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/storyText"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:translationZ="3dp"
        android:paddingTop="30dp"
        android:paddingRight="28dp"
        android:paddingLeft="37dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/pfstardust"
        android:text=""/>


    <ImageView
        android:id="@+id/storyImageFrame"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/quize_frame"/>

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/init_finish_btn_frame" />


</RelativeLayout>