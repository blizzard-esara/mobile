<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="230dip"
        android:layout_height="300dip"
        android:background="@drawable/shop_buy_box"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/shopdialog_eggImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/shop_buy_box_info"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/overwatch_egg"/>


        <TextView
            android:id="@+id/shopdialog_eggName"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/pfstardust"
            android:textColor="#000"
            android:text="디아블로 알"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/pfstardust"
                android:textColor="#000"
                android:text="필요 포인트  "/>
            <TextView
                android:id="@+id/shopdialog_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:textSize="12sp"
                android:text="5"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:textSize="12sp"
                android:text="pt"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/pfstardust"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="구매하시겠습니까?" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_buyYes"
               android:layout_marginLeft="20dp"
                android:layout_width="93dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/pfstardust"
                android:background="@drawable/shop_yes"
                android:text="구매" />

            <Button
                android:id="@+id/btn_buyNo"
                android:layout_marginRight="20dp"
                android:layout_width="93dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/pfstardust"
                android:background="@drawable/shop_no"
                android:text="아니오" />



        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


