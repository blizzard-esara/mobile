<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:id="@+id/quizConAudio_timerRelative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/quizConAudio_timerIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="-1dp"
            android:src="@drawable/quiz_timer"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/quizConAudio_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="10"
            android:fontFamily="@font/pfstardust"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quizConAudio_mainContainerRelative"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/quiz_box_big"
        android:layout_marginTop="10dp"
        android:layout_below="@id/quizConAudio_timerRelative">

        <LinearLayout
            android:id="@+id/quizConAudio_playLinear"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quizCon_beforeBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/music_before"
                />

            <Button
                android:id="@+id/quizCon_resumeBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/music_pause"
                android:layout_marginLeft="30dp"
                />

            <Button
                android:id="@+id/quizCon_afterBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/music_next"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/quizConAudio_playLinear">
            <TextView
                android:id="@+id/quizConAudio_Contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:lineSpacingExtra="10dp" />
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="180dp"
        android:layout_below="@id/quizConAudio_mainContainerRelative"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quizConAudio_an1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:fontFamily="@font/pfstardust"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="@drawable/quiz_box_small"/>

            <Button
                android:id="@+id/quizConAudio_an2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:fontFamily="@font/pfstardust"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="@drawable/quiz_box_small"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quizConAudio_an2Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal">
            <Button
                android:id="@+id/quizConAudio_an3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:fontFamily="@font/pfstardust"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="@drawable/quiz_box_small"/>

            <Button
                android:id="@+id/quizConAudio_an4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:fontFamily="@font/pfstardust"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="@drawable/quiz_box_small"/>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>