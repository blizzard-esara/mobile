<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">




        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/eggSpeachImageView"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:src="@drawable/speech_frame"
                android:visibility="invisible"
                android:translationZ="10dp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/eggSpeachTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:translationZ="11dp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text=""/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/starcraftEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="6dp"
            android:visibility="invisible"
            android:onClick="eggChoise"
            />

        <ImageView
            android:id="@+id/diabloEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="7dp"
            android:visibility="invisible"
            android:onClick="eggChoise"

            />

        <ImageView
            android:id="@+id/overWatchEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="8dp"
            android:visibility="invisible"
            android:onClick="eggChoise"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/storyText"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:translationZ="3dp"
        android:paddingTop="30dp"
        android:paddingRight="28dp"
        android:paddingLeft="37dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/pfstardust"
        android:text=""/>


    <ImageView
        android:id="@+id/storyImageFrame"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/quize_frame"/>

</RelativeLayout>