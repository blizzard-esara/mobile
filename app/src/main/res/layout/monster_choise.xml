<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/eggImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="5dp"
            android:src="@drawable/basic_egg"/>

        <ImageView
            android:id="@+id/starcraftEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="6dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/starcraft_egg"/>

        <ImageView
            android:id="@+id/diabloEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="7dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/diablo_egg"/>

        <ImageView
            android:id="@+id/overWatchEgg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:translationZ="8dp"
            android:visibility="invisible"
            android:onClick="eggClickEvent"
            android:src="@drawable/overwatch_egg"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/storyText"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:translationZ="3dp"
        android:paddingTop="30dp"
        android:paddingRight="28dp"
        android:paddingLeft="37dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/pfstardust"
        android:text=""/>


    <ImageView
        android:id="@+id/storyImageFrame"
        android:layout_below="@+id/imageLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/quize_frame"/>

</RelativeLayout>