<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

 <RelativeLayout
     android:id="@+id/detail_topBackgroundRelative"
     android:layout_width="match_parent"
     android:layout_height="170dp"
     android:background="@drawable/egg_info_background"
>
 </RelativeLayout>

 <LinearLayout
     android:id="@+id/eggdetail_Linear"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/detail_topBackgroundRelative"
     android:layout_marginTop="-130dp"
     android:gravity="center"
     android:orientation="vertical">

  <ImageView
      android:id="@+id/eggdetail_eggImage"
      android:layout_width="150dp"
      android:layout_height="180dp"
      android:src="@drawable/overwatch_egg"
      />
  <TextView
      android:id="@+id/eggdetail_userId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="30sp"
      android:fontFamily="@font/shylock_nbp"
      android:textColor="#000"
      android:text="User Name"/>
 </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/eggdetail_Linear"
        android:layout_marginTop="20dp"
        android:background="@drawable/egg_info_box_tmp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/shylock_nbp"
                android:layout_marginLeft="15dp"
                android:text="Exp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="21dp">
                <SeekBar
                    android:id="@+id/eggdetail_expBar"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:max="100"
                    android:progress="50"
                    android:thumb="@null"
                    android:splitTrack="false"
                    android:progressDrawable="@drawable/custom_seek_bar"
                    android:background="@drawable/button_frame"
                    android:paddingStart="-10dp"
                    android:paddingEnd="-10dp"
                    android:scaleY="2"
                    />
                <TextView
                    android:id="@+id/eggdetail_expTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/pfstardust"
                    android:text="50%"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성장단계 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"/>
            <TextView
                android:id="@+id/eggdetail_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="단계"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알타입 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"/>
            <TextView
                android:id="@+id/eggdetail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="overWatch"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"/>
            <TextView
                android:id="@+id/eggdetail_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="일"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무게 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"/>
            <TextView
                android:id="@+id/eggdetail_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="2kg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태 : "
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"/>
            <TextView
                android:id="@+id/eggdetail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/pfstardust"
                android:text="양호"/>
        </LinearLayout>

    </LinearLayout>






 <ImageView
     android:layout_width="match_parent"
     android:layout_height="12dp"
     android:layout_marginBottom="20dp"
     android:layout_alignParentBottom="true"
     android:src="@drawable/team_ysera_logo_wide"/>
</RelativeLayout>
